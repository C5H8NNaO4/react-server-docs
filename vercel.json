{
  "rewrites": [{ "source": "/(.*)", "destination": "/api/index.js" }],
  "builds": [
    {
      "src": "./api/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "dist/server/**/*.js",
      "use": "@now/node"
    }
  ],
  "outputDirectory": ".",
  "devCommand": "node api/index",
  "buildCommand": "yarn build:server && yarn build:client"
}
  