{
  "rewrites": [{ "source": "/(.*)", "destination": "/api" }],
  "outputDirectory": ".",
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "dist/**",
      "use": "@vercel/static"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "devCommand": "node api/index",
  "buildCommand": "yarn build:server && yarn build:client"
}
